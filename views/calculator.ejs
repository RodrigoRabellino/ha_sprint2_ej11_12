<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Calculator</title>
  </head>
  <body>
    <%- include("partials/navBar") %>
    <section style="padding: 1rem" class="d-flex flex-column my-section">
      <h1>Calculator</h1>

      <div class="w-75">
        <form id="form__calc">
          <div class="mb-3">
            <label for="form__num1" class="form-label"> Number 1 </label>
            <input
              type="number"
              class="form-control text-center"
              id="form__num1"
              name="form__num1"
              placeholder="0"
            />
          </div>

          <div class="mb-3">
            <label for="form__num2" class="form-label"> Number 2 </label>
            <input
              type="number"
              class="form-control text-center"
              name="form__num2"
              id="form__num2"
              placeholder="0"
            />
            <select
              class="my-form-select form-select text-center"
              for="form__select"
              id="form__select"
              name="form__select"
            >
              <option value="mul">Multiplicar</option>
              <option value="sum">Sumar</option>
              <option value="res">Restar</option>
              <option value="div">Dividir</option>
            </select>
            <div
              style="margin-top: 1rem; display: flex; justify-content: center"
            >
              <input
                id="btn__calculate"
                type="submit"
                class="btn btn-success m-1"
                value="Calculate"
              />
              <input type="reset" class="btn btn-danger m-1" value="Clear" />
            </div>
          </div>
        </form>
        <h3 id="text__result">Result:</h3>
      </div>
    </section>
    <%- include("partials/footer") %> <%- include("partials/scripts") %>
    <script src="/js/scripts.js"></script>
  </body>
</html>
